# Database Configuration
# For Azure SQL Database (Recommended)
DB_USER=your_azure_db_user
DB_PASSWORD=your_azure_db_password
DB_SERVER=your_azure_server.database.windows.net
DB_NAME=your_azure_database_name
DB_PORT=1433
DB_ENCRYPT=true
DB_TRUST_CERT=false

# For AWS RDS (Fallback)
# DB_USER=admin
# DB_PASSWORD=your_rds_password
# DB_SERVER=your_rds_endpoint.region.rds.amazonaws.com
# DB_NAME=backend
# DB_PORT=1433
# DB_ENCRYPT=true
# DB_TRUST_CERT=true

# Connection Timeouts
DB_CONNECT_TIMEOUT=30000
DB_REQUEST_TIMEOUT=30000
DB_CANCEL_TIMEOUT=5000
