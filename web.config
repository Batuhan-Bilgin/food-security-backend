<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>

    <!-- 1) Rewrite EVERY request to app.js -->
    <rewrite>
      <rules>
        <rule name="DynamicContent" stopProcessing="true">
          <match url=".*" />
          <action type="Rewrite" url="app.js" />
        </rule>
      </rules>
    </rewrite>

    <!-- 2) Route all verbs for app.js through iisnode -->
    <handlers>
      <add name="iisnode" path="app.js" verb="*" modules="iisnode" />
    </handlers>

    <!-- 3) IIS‐level CORS headers as a safety net -->
    <httpProtocol>
      <customHeaders>
        <add name="Access-Control-Allow-Origin" value="https://food-security.net" />
        <add name="Access-Control-Allow-Origin" value="https://www.food-security.net" />
        <add name="Access-Control-Allow-Methods" value="GET,POST,OPTIONS" />
        <add name="Access-Control-Allow-Headers" value="Content-Type" />
        <add name="Access-Control-Allow-Credentials" value="true" />
      </customHeaders>
    </httpProtocol>

    <!-- 4) iisnode settings -->
    <security>
      <requestFiltering>
        <requestLimits maxAllowedContentLength="30000000" />
      </requestFiltering>
    </security>
    <iisnode
      loggingEnabled="true"
      devErrorsEnabled="false"
      watchedFiles="web.config;*.js" />
  </system.webServer>
</configuration>
